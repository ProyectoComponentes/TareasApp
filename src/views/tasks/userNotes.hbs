<div class="row">
    {{#each userNotes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }} <a href="/tasks/editNote/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{ description }}</p>
                <!-- DELETE REQUEST -->
                <form action="/tasks/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hola {{user.name}}</h1>
            <p clsss="lead">No tienes notas registradas aun</p>
            <a href="/tasks/add" class="btn btn-success btn-block">Crear nota</a>
        </div>
    </div>
    {{/each}}
</div>